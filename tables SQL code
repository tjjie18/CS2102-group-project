CREATE TABLE has (
  start_date DATE REFERENCES availability (s_datetime),
  end_date DATE REFERENCES availability (e_datetime),
  PRIMARY KEY (start_date, end_date)
);

CREATE TABLE pays (
  pet_type VARCHAR PRIMARY KEY,
  price INTEGER NOT NULL
);



CREATE TABLE transinvolved_in (
	bid_no		  INTEGER,
	trans_no	  INTEGER,
	status		  VARCHAR,
	trans_mtd	  VARCHAR,
	pay_mtd	  	VARCHAR,
	rating		  VARCHAR,
	FOREIGN KEY (bid_no) REFERENCES bids_for(bid_no) ON DELETE cascade,
	PRIMARY KEY (bid_no, trans_no)
);
